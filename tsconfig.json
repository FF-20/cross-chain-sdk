{
  "extends": "@1inch/tsconfig",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "baseUrl": "./src"
  },
  "include": ["./src/**/*.ts", "./src/**/*.json"]
}
